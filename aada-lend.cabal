  import:               base, project-config
  hs-source-dirs:       app
  main-is:              mint-lender-nft.hs
  ghc-options:          -Wall

  build-depends:        cardano-api
                      , cardano-ledger-alonzo
                      , plutus-ledger
                      , aada-lend 
                      , plutus-tx
                      , plutus-ledger-api
                      , bytestring
                      , aeson

executable mint-time-nft
  import:               base, project-config
  hs-source-dirs:       app
  main-is:              mint-time-nft.hs
  ghc-options:          -Wall

  build-depends:        cardano-api
                      , cardano-ledger-alonzo
                      , plutus-ledger
                      , aada-lend 
                      , plutus-tx
                      , plutus-ledger-api
                      , bytestring
                      , aeson

executable test
  import:              base, project-config
  hs-source-dirs:      testing
  main-is:             EmulatorTrace.hs
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  build-depends:       aeson
                     , bytestring
                     , cardano-api
                     , cardano-crypto-class
                     , cardano-ledger-core
                     , cardano-ledger-shelley
                     , cardano-wallet-core
                     , containers
                     , data-default
                     , freer-extras
                     , playground-common
                     , plutus-contract
                     , plutus-ledger
                     , plutus-ledger-api
                     , plutus-ledger-constraints
                     , plutus-pab
                     , plutus-tx-plugin
                     , plutus-tx
                     , plutus-use-cases
                     , prettyprinter
                     , serialise
                     , text
                     , lens
                     , time
                     , openapi3
